.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.mView{
  margin-top: 20rpx;

  width: 100%;
  display: flex;
  align-items: center;
  justify-content: center; 
}

.QRCodeImage {
  width: 400rpx;
  height: 400rpx;
  margin: 20rpx;
}

.userinfo-nickname {
  color: #aaa;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.stateText {
  display: flex;
  text-align: center;
  flex-direction: column;
  align-items: center;
  color: #000000;
}

.usermotto {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 200px;
}